@model LoginViewModel


@{
    ViewData["Title"] = "Login";
}
<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                @Html.TextBoxFor(o => o.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.Email)
                @*<input id="email" name="Email" asp-for="Email" class="form-control" />*@
                @*<span asp-validation-for="Email" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                @Html.PasswordFor(o => o.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.Password)
                @*<input id="password" type="password" name="Password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
            <div class="form-group">
                <a asp-action="Create">Don't have an account</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}